{
  "metadata": [
    {
      "src": [
        {
          "src": "../GameCanvas-Unity",
          "files": [
            "**/GameCanvas.csproj"
          ]
        }
      ],
      "dest": "src/api",
      "filter": "filter.yml"
    }
  ],
  "build": {
    "content": [
      { "files": "**/*.{md,yml}", "src": "src" }
    ],
    "resource": [
      { "files": "images/**", "src": "src" }
    ],
    "output": "../GameCanvas-Unity/docs",
    "template": [
      "default",
      "modern"
    ],
    "overwrite": "overwrite.md",
    "globalMetadata": {
      "_appName": "GameCanvas",
      "_appTitle": "GameCanvas",
      "_appFooter": "(c) 2015-2024 Smart Device Programming.",
      "_appLogoPath": "images/logo.png",
      "_enableSearch": true,
      "pdf": false,
      "_disableContribution": true
    }
  }
}